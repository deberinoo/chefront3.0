<title>Chefront - Register Customer</title>

<link rel="stylesheet" href="/public/css/login.css">

<section>
	<div class="container-fluid">
		<div class="row no-gutter">
			<div class="col-md-6 d-none d-md-flex bg-image"></div>
			<div class="col-md-6">
				<div class="login d-flex align-items-center py-5">
					<div class="container">
						<div class="row">
							<div class="col-lg-10 col-xl-7 mx-auto">
								<h3 class="display-4 mb-4">Create a customer account</h3>
								<form action="/admin/reply_feedback_process/{{email}}" method="post">
                                    <div class="form-group mb-3">
										<p>
                                            {{message}}
                                        </p>
									</div>
									<div class="form-group mb-3">
										<input 
											id="Reply" 
											type="text" 
											placeholder="Input a reply" required="" autofocus="" 
											minlength="2" maxlength="30" 
											class="form-control rounded-pill shadow-sm px-4 text-dark"
											name="Reply"
										>
									</div>
									<button type="Reply"
										class="btn custom-btn btn-danger btn-block mb-2 rounded-pill shadow-sm">Sign up</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>