<title>Chefront - My Reservations</title>

<link rel="stylesheet" href="/public/css/profile.css">
<link rel="stylesheet" href="/public/flaticon/flaticon.css">

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-12 col-xl-12 mx-auto">
                <h2 class="h3 mb-4 page-title">My Reservations</h2>
                <div class="my-4">
                    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/c/{{user.email}}" role="tab"
                                aria-controls="home" aria-selected="false">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" href="/u/c/my-reservations/{{user.email}}" role="tab"
                                aria-controls="home" aria-selected="false">Reservations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="#home" role="tab"
                                aria-controls="home" aria-selected="false">Favourites</a>
                        </li>
                    </ul>
                    <div class="row">
                        {{#each reservation}}
                            <div class="card col-sm-6 mr-4 mb-4" style="width: 30rem;">
                                <div class="card-body" style="font-size: larger;">
                                    <div style="text-align:left;">
                                        <h5 class="card-title">{{ name }}</h5>
                                        <p class="card-text">{{ reservation_id }}</p>
                                        <p class="card-text"><i class="flaticon-calendar"></i> {{ res_date }}</p>
                                        <p class="card-text"><i class="flaticon-user"></i> {{ pax }}
                                        <p class="card-text"><i class="flaticon-clock"></i> {{ time }} / {{ discount }}% off
                                        <br><br>
                                        <a href="../my-reservations/{{user_email}}/cancel-reservation/{{ reservation_id }}" class="float-right btn btn-danger">Cancel</a>
                                        <a href="../my-reservations/{{user_email}}/edit-reservation/{{ reservation_id }}" class="float-right btn btn-outline-danger mr-3">Edit</a>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>