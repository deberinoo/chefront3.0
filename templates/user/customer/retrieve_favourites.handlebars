<title>Chefront - My favourite restaurants</title>

<link rel="stylesheet" href="/public/css/profile.css">
<link rel="stylesheet" href="/public/flaticon/flaticon.css">

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-12 col-xl-12 mx-auto">
                <h2 class="h3 mb-4 page-title">My favourite restaurants</h2>
                <div class="my-4">
                    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/c/{{user.email}}" role="tab"
                                aria-controls="home" aria-selected="false">Profile</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Reservations
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/u/c/my-reservations/upcoming/{{user.email}}">Upcoming</a>
                            <a class="dropdown-item" href="/u/c/my-reservations/historical/{{user.email}}">Historical</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/c/my-favourites/{{user.email}}" role="tab"
                                aria-controls="home" aria-selected="false">Favourites</a>
                        </li>
                    </ul>
                    <div class="row">
                       {{#each favourites}}
                            <div class="card col-sm-6 mr-4 mb-4" style="width: 30rem;">
                                <div class="card-body" style="font-size: larger;">
                                    <div style="text-align:left;">
                                        <h5 class="card-title">{{ location }}</h5>
                                         <br><br>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-danger float-right" data-toggle="modal" data-target="#cancelModal">
                                            Delete
                                        </button>
                                        <a href="/restaurant/{{name}}/{{location}}" class="float-right btn btn-outline-danger mr-3">View</a>

                                        <!-- Modal -->
                                        <div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Remove restaurant from restaurants</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to remove this restaurant?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <a href="/u/c/delete-favourite/{{uuid}}/{{email}}">
                                                        <button type="button" class="btn btn-danger">Confirm</button>
                                                    </a>
                                                </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>