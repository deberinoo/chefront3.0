<title>Chefront - Business Outlets</title>

<link rel="stylesheet" href="/public/css/profile.css">

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8 mx-auto">
                <h2 class="h3 mb-4 page-title">Business Outlets</h2>
                <div class="my-4">
                    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/userBusiness" role="tab"
                                aria-controls="home" aria-selected="false">Business Profile</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                                aria-haspopup="true" aria-expanded="false">Outlets</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/u/create-outlet">Create new outlet</a>
                                <a class="dropdown-item" href="/u/view-outlets">View existing outlets</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                                aria-haspopup="true" aria-expanded="false">Discount slots</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Create new slot</a>
                                <a class="dropdown-item" href="#">View existing slots</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/reservation-status" role="tab"
                                aria-controls="home" aria-selected="false">View reservation status</a>
                        </li>
                    </ul>
                    <table class="table table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                              <th scope="col">Location</th>
                              <th scope="col">Address</th>
                              <th scope="col">Postal Code</th>
                              <th scope="col">Price</th>
                              <th scope="col">Contact</th>
                              <th scope="col">Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for outlet in outlets_created_today %}
                              <tr>
                                  <td>{{ outlet.location }}</td>
                                  <td>{{ outlet.address }}</td>
                                  <td>{{ outlet.postal_code }}</td>
                                  <td>{{ outlet.price }}</td>
                                  <td>{{ outlet.contact }}</td>
                                  <td>{{ outlet.description }}</td>
                              </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>