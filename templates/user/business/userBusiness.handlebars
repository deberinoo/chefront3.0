<title>Chefront - Business User</title>

<link rel="stylesheet" href="/public/css/profile.css">

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8 mx-auto">
                <h2 class="h3 mb-4 page-title">Business Profile Settings</h2>
                <div class="my-4">
                    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" href="/u/userBusiness" role="tab"
                                aria-controls="home" aria-selected="false">Business Profile</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                                aria-haspopup="true" aria-expanded="false">Outlets</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/u/create-outlet">Create new outlet</a>
                                <a class="dropdown-item" href="/u/view-outlets">View existing outlets</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                                aria-haspopup="true" aria-expanded="false">Discount slots</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Create new slot</a>
                                <a class="dropdown-item" href="#">View existing slots</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/reservation-status" role="tab"
                                aria-controls="home" aria-selected="false">View reservation status</a>
                        </li>
                    </ul>
                    <form class="col-12">
                        {{#if user}}
                            <div class="row mt-5 align-items-center">
                                <div class="col-md-3 text-center mb-5">
                                    <div class="avatar avatar-xl">
                                        <img src="../../public/img/illustrations/user.png" alt="..."
                                            class="avatar-img rounded-circle" />
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="row align-items-center">
                                        <div class="col-md-7">
                                            <h4 class="mb-1">{{user.business_name}}</h4>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-md-12">
                                            <p class="small mb-0 text-muted">{{user.email}}</p>
                                            <p class="small mb-0 text-muted">{{user.address}}</p>
                                            <p class="small mb-0 text-muted">{{user.contact}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4" />
                            <div class="form-group">
                                <label for="inputEmail4">Business Name</label>
                                <input type="text" readonly class="form-control-plaintext text-dark" id="businessName" value="{{user.business_name}}" />
                            </div>
                            <div class="form-group">
                                <label for="inputEmail4">Email</label>
                                <input type="email" readonly class="form-control-plaintext text-dark" id="inputEmail4" value="{{user.email}}" placeholder="" />
                            </div>
                            <div class="form-group">
                                <label for="inputAddress5">Address</label>
                                <input type="text" readonly class="form-control-plaintext text-dark" id="inputAddress5" value="{{user.address}}" placeholder="" />
                            </div>
                            <div class="form-group">
                                <label for="inputAddress5">Contact Number</label>
                                <input type="text" readonly class="form-control-plaintext text-dark" id="inputAddress5" value="{{user.contact}}" placeholder="" />
                            </div>
                        {{/if}}
                        <a class="btn btn-danger mt-3" href="../u/edit/userBusiness">
                            Edit Profile
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>