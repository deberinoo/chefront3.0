<title>Chefront - Select Outlet</title>

<link rel="stylesheet" href="/public/css/profile.css">
<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-12 col-xl-12 mx-auto">
                <h2 class="h3 mb-4 page-title">Reservation Status</h2>
                <div class="my-4">
                    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/b/{{user.name}}" role="tab"
                                aria-controls="home" aria-selected="false">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/b/{{user.name}}/view-outlets" role="tab"
                                aria-controls="home" aria-selected="false">Outlets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" href="/u/b/{{user.name}}/view-discount-slots" role="tab"
                                aria-controls="home" aria-selected="false">Discount slots</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" href="/u/b/{{user.name}}/select-outlet" role="tab"
                                aria-controls="home" aria-selected="false">View reservation status</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                {{#each outlet}}
                        <div class="card col-sm-6 mr-4 mb-4" style="width: 25rem;">
                            <a href="../{{ name }}/{{ location }}/reservation-status">
                            <img class="card-img-top img-fluid"
                                src="/{{thumbnail}}"
                                alt="Card image cap" width="300">
                            <div class="card-body">
                                <h4 class="card-title">{{name}}</h4>
                                <p class="card-text">{{location}}</p>
                                <p class="card-text"></p>
                            </div>
                            </a>
                        </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>

<script>
    $("#table").bootstrapTable("hideLoading");
</script>