<title>Chefront - Reset Password</title>

<link rel="stylesheet" href="/public/css/login.css">

<section>
	<div class="container-fluid">
		<div class="row no-gutter">
			<div class="col-md-6 d-none d-md-flex bg-image"></div>
			<div class="col-md-6">
				<div class="login d-flex align-items-center py-5">
					<div class="container">
						<div class="row">
							<div class="col-lg-10 col-xl-7 mx-auto">
								<h3 class="display-4 mb-4">Reset password</h3>
								<form action="/auth/resetPassword/{{email}}?_method=PUT" method="post">
									<div class="form-group mb-3">
										<input id="inputPassword" type="password" placeholder="Password" required=""
											class="form-control rounded-pill shadow-sm px-4 text-dark" name="InputPassword" >
									</div>
									<div class="form-group mb-3">
										<input id="confirmPassword" type="password" placeholder="Confirm password"
											required="" pattern=".{8,}"
											title="Password should contain eight or more characters"
											class="form-control rounded-pill shadow-sm px-4 text-dark" name="ConfirmPassword" >
									</div>
									<button type="submit"
										class="btn custom-btn btn-danger btn-block mb-2 rounded-pill shadow-sm">Reset Password</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>