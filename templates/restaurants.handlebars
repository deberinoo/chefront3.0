<section id="home" class="py-1 active pr-5">
	<div class="container position-relative">
		<div class="row align-items-center min-vh-60 my-lg-7 h-24">
            <img src="../public/img/restaurants/search.png" style="height: 450px; width:450px;">
			<div class="col-md-7 col-lg-7 text-center text-md-start py-8 px-5">
				<h1 class="ml-1 mb-4 display-2 lh-sm">Search for your <br class="d-block d-lg-none d-xl-block" />favourite restaurants!
				</h1>
                <div class="search">
                    <input type="search" id="search" class="form-control text-dark"
                    placeholder="Search for a restaurant, location or cuisine" style="height: 3.5rem; border-radius:50px;padding: 0 25px">
                </div>
			</div>
		</div>
	</div>
</section>
<br>

<div>
    <div class="container">
        <div class="row my-4">
            <div class="col">
                <div class="carddeck">
                    <div class="d-flex flex-wrap justify-content-center">
                        {{#each restaurants}}
                            <div class="card mr-3 mb-5">
                                <a href="/restaurant/{{business_name}}/{{location}}">
                                    <img class="card-img-top img-fluid"
                                        src="https://dummyimage.com/400x200/563d7c/ffffff&text=.card-img-topfff&text=.card-img-top"
                                        alt="Card image cap" width="300">
                                    <div class="card-body">
                                        <h4 class="card-title">{{business_name}}</h4>
                                        <p class="card-text">{{location}} â€¢ ${{price}}</p>
                                        <p class="card-text"></p>
                                    </div>
                                </a>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    jQuery.expr[':'].contains = function (a, i, m) {
        return jQuery(a).text().toUpperCase()
            .indexOf(m[3].toUpperCase()) >= 0;
    };

    $('#search').keyup(function () {
        $('.card a').removeClass('d-none'); //
        var filter = $(this).val(); // get the value of the input, which we filter on
        $('.carddeck').find('.card a .card-body h4:not(:contains("' + filter + '"))').parent().parent()
            .addClass('d-none');
    })
</script>